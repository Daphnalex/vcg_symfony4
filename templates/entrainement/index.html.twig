{% extends 'base.html.twig' %}

{% block title %}Les entrainements{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="entrainement">
    <h1>Les horaires d'entrainements</h1>
    <div class="row-fluid mt-4 white pt-3 pb-3 pr-5 pl-5">
        {% if entrainement %}
            <p>{{entrainement.content|raw}}</p>
        {% else %}
            <p>Les horaires d'entrainement n'ont pas encore été créés.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
