{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
{% for message in app.flashes('message') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}
<div class="row">
    <div class='col-12 p-4' style='background-color: white'>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
        
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté comme {{ app.user.username }}, <a href="{{ path('logout') }}">Se déconnecter</a>
                </div>
            {% endif %}
        
            <h1 class="h3 mb-3 font-weight-normal">Authentification</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
            <br/>
            <label for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control" required>

            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >
            <br/>
            {#<div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>#}

            <div class="center mt-4 mb-4">
                <button class="btn btn-primary" type="submit">
                    Se connecter
                </button>
            </div>
            <div class="mt-4 center">
                <a href='/inscription'>S'enregistrer</a>
            </div>
            <div class="mt-4 center">
                <a href='/mot-de-passe-oublie'>Mot de passe oublié</a>
            </div>
        </form>
    </div>
</div>

{% endblock %}
