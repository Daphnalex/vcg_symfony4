{% extends 'base.html.twig' %}

{% block title %}Le club{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="club">
    <h1>Présentation du club</h1>
    <div class="row-fluid mt-4 white p-3">
        {% if club %}
            <p>{{club.presentation|raw}}</p>
        {% else %}
            <p>Il n'y a pas encore de présentation.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
